<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_lich_su_tree" model="ir.ui.view">
            <field name="name">lich_su_cong_tac.tree</field>
            <field name="model">lich_su_cong_tac</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nhan_vien_id"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="phong_ban_id"/>
                    <field name="chuc_vu_id"/>
                </tree>
            </field>
        </record>

        <record id="view_lich_su_form" model="ir.ui.view">
            <field name="name">lich_su_cong_tac.form</field>
            <field name="model">lich_su_cong_tac</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="nhan_vien_id"/>
                                <field name="phong_ban_id"/>
                                <field name="chuc_vu_id"/>
                            </group>
                            <group>
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                            </group>
                        </group>
                        <field name="ghi_chu" placeholder="Ghi chú thêm..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_lich_su" model="ir.actions.act_window">
            <field name="name">Lịch Sử Công Tác</field>
            <field name="res_model">lich_su_cong_tac</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>