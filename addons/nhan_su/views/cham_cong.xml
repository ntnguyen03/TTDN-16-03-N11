<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cham_cong_search" model="ir.ui.view">
            <field name="name">cham_cong.search</field>
            <field name="model">cham_cong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nhan_vien_id"/>
                    <field name="ngay"/>
                    <group expand="0" string="Group By">
                        <filter string="Nhân viên" name="group_by_nv" context="{'group_by': 'nhan_vien_id'}"/>
                        <filter string="Tháng" name="group_by_thang" context="{'group_by': 'ngay:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_cham_cong_tree" model="ir.ui.view">
            <field name="name">cham_cong.tree</field>
            <field name="model">cham_cong</field>
            <field name="arch" type="xml">
                <tree editable="bottom"> <field name="ngay"/>
                    <field name="nhan_vien_id"/>
                    <field name="gio_vao" widget="float_time"/>
                    <field name="gio_ra" widget="float_time"/>
                    <field name="so_gio_lam" widget="float_time" sum="Tổng giờ làm"/>
                </tree>
            </field>
        </record>

        <record id="action_cham_cong" model="ir.actions.act_window">
            <field name="name">Bảng Chấm Công</field>
            <field name="res_model">cham_cong</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>