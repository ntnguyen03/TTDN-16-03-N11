<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cong_viec_search" model="ir.ui.view">
            <field name="name">quan_ly_cong_viec.search</field>
            <field name="model">quan_ly_cong_viec</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_cong_viec"/>
                    <field name="nguoi_thuc_hien_id"/>
                    <field name="du_an_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Dự án" name="group_by_project" context="{'group_by': 'du_an_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_cong_viec_form" model="ir.ui.view">
            <field name="name">quan_ly_cong_viec.form</field>
            <field name="model">quan_ly_cong_viec</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="trang_thai" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="ten_cong_viec" class="oe_edit_only"/>
                            <h1><field name="ten_cong_viec"/></h1>
                        </div>
                        
                        <group>
                            <group string="Thông tin chung">
                                <field name="du_an_id" options="{'no_create': True}"/>
                                <field name="du_an_thanh_vien_ids" invisible="1"/> 
                                <field name="do_uu_tien" widget="priority"/>
                            </group>
                            
                            <group string="Chỉ tiêu &amp; Tiến độ">
                                <label for="so_luong_can_lam" string="Chỉ tiêu"/>
                                <div class="o_row">
                                    <field name="so_luong_can_lam"/>
                                    <field name="don_vi_tinh"/>
                                </div>
                                
                                <field name="tien_do" widget="progressbar"/>
                                
                                <field name="so_luong_da_lam" decoration-bf="1"/>
                                <field name="gio_thuc_te"/>
                            </group>
                        </group>

                        <group string="Phân công thực hiện">
                            <field name="nguoi_thuc_hien_id" options="{'no_create': True}"/>
                            <field name="nhan_vien_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>

                        <notebook>
                            <page string="Nhật ký làm việc">
                                <field name="nhat_ky_ids">
                                    <tree editable="bottom">
                                        <field name="ngay_lam_viec"/>
                                        <field name="nhan_vien_id"/>
                                        <field name="ket_qua"/>
                                        
                                        <field name="thoi_gian_lam" sum="Tổng giờ" widget="float_time"/>
                                        <field name="so_luong_hoan_thanh" sum="Tổng sản lượng"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Mô tả chi tiết">
                                <field name="mo_ta"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_cong_viec_tree" model="ir.ui.view">
            <field name="name">quan_ly_cong_viec.tree</field>
            <field name="model">quan_ly_cong_viec</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ten_cong_viec"/>
                    <field name="du_an_id"/>
                    <field name="nguoi_thuc_hien_id"/>
                    <field name="do_uu_tien" widget="priority"/>
                    <field name="tien_do" widget="progressbar"/>
                    <field name="trang_thai" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="action_cong_viec" model="ir.actions.act_window">
            <field name="name">Công Việc</field>
            <field name="res_model">quan_ly_cong_viec</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    <record id="view_du_an_form_inherit" model="ir.ui.view">
        <field name="name">quan_ly_du_an.form.inherit</field>
        <field name="model">quan_ly_du_an</field>
        <field name="inherit_id" ref="quan_ly_du_an.view_quan_ly_du_an_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_chi_phi']" position="after">
                <page string="Tiến độ Công việc">
                    <field name="cong_viec_ids" readonly="1">
                        <tree decoration-success="trang_thai == 'xong'" decoration-info="trang_thai == 'dang_lam'">
                            <field name="ten_cong_viec"/>
                            <field name="nguoi_thuc_hien_id" widget="many2one_avatar"/>
                            <field name="tien_do" widget="progressbar"/>
                            <field name="trang_thai" widget="badge"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</data>
</odoo>